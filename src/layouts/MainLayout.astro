---
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import { Facebook } from "lucide-react";
import { Instagram } from "lucide-react";
import { Github } from "lucide-react";
import { Mail } from "lucide-react";
import logo from "../images/techtonyc.png";
import "@/styles/globals.css";

const { title = "TechTonyc - Tech Blog - By Tony B. NYA" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/techtonyc.ico" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-black text-white">
      <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
      >
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <Image src={logo} class="h-14 w-14" alt="TechTonyc Logo" />
          <span
            class="self-center text-2xl font-bold whitespace-nowrap tracking-tight"
            ><span class="text-white">Tech</span><span class="text-[#602f32]"
              >Tony</span
            ><span class="text-[#8f7d5e]">c</span>
          </span>
          <Button
            data-collapse-toggle="navbar-default"
            type="button"
            className="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white bg-transparent rounded-lg md:hidden hover:text-[#602f32]"
            aria-controls="navbar-default"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <svg
              class="w-5 h-5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 17 14"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 1h15M1 7h15M1 13h15"></path>
            </svg>
          </Button>
          <div class="hidden w-full md:block md:w-auto" id="navbar-default">
            <ul
              class="font-medium flex flex-col p-4 md:p-0 mt-4 border text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 border-gray-700"
            >
              <li>
                <a
                  href="/"
                  class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32]"
                  aria-current="page">Home</a
                >
              </li>
              <li>
                <a
                  href="/articles"
                  class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32]"
                  >All Articles</a
                >
              </li>
              <li>
                <a
                  href="/about"
                  class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32]"
                  >About</a
                >
              </li>
            </ul>
          </div>
        </a>
      </div>
    </nav>

    <section class="container mx-auto max-w-screen-xl mt-10 px-8">
      <slot />
    </section>

    <footer class="bg-black text-white">
      <div class="container mx-auto mt-10 max-w-screen-xl px-8 pb-8">
        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-8 mx-auto text-center md:text-left"
        >
          <div class="mt-10">
            <h3 class="text-2xl font-semibold mb-6 text-[#8f7d5e]">About</h3>
            <p
              class="text-white text-sm text-justify tracking-tight max-lg:tracking-wide"
            >
              <span
                class="self-center font-bold whitespace-nowrap tracking-tight"
              >
                <span class="text-white">Tech</span><span class="text-[#602f32]"
                  >Tony</span
                ><span class="text-[#8f7d5e]">c</span></span
              >
              is a blog for tech enthusiasts. I publish articles, accomplishments,
              milestones, stories, thoughts, and tutorials about tech related stuff.
            </p>
          </div>
          <div class="mt-10 mx-auto">
            <h3 class="text-2xl font-semibold mb-6 text-justify text-[#8f7d5e]">
              Categories
            </h3>
            <ul class="text-white text-md">
              <li class="mb-2">
                <a href="#" class="hover:underline">Tech</a>
              </li>
              <li class="mb-2">
                <a href="#" class="hover:underline">Coding</a>
              </li>
              <li class="mb-2">
                <a href="#" class="hover:underline">Artificial Intelligence</a>
              </li>
              <li class="mb-2">
                <a href="#" class="hover:underline">Tools</a>
              </li>
              <li class="mb-2">
                <a href="#" class="hover:underline">Productivity</a>
              </li>
            </ul>
          </div>
          <div class="mt-10 max-sm:flex max-sm:flex-col max-sm:items-center">
            <h3 class="text-2xl font-semibold mb-6 text-justify text-[#8f7d5e]">
              Contact
            </h3>
            <ul
              class="text-white text-md flex justify-start items-center gap-4 mb-2"
            >
              <li class="mb-2">
                <a
                  href="https://github.com/tonybnya"
                  target="_blank"
                  class="text-white hover:text-[#602f32]"
                >
                  <Github />
                </a>
              </li>
              <li class="mb-2">
                <a
                  href="https://x.com/tonybnya"
                  target="_blank"
                  class="text-white hover:text-[#602f32]"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    class="w-5 h-5"
                  >
                    <path
                      stroke="currentColor"
                      stroke-width="2"
                      d="M23 3a10.9 10.9 0 01-3.1.9A4.5 4.5 0 0022 1.5a9 9 0 01-2.8 1.1A4.5 4.5 0 0016 0a4.5 4.5 0 00-4.5 4.5c0 .35.04.69.1 1.02A12.8 12.8 0 011.5 1.1a4.5 4.5 0 001.4 6A4.5 4.5 0 01.9 7.5v.06A4.5 4.5 0 004.5 12a4.5 4.5 0 01-2.1.08A4.5 4.5 0 004.5 15a9 9 0 01-5.5 1.9A12.8 12.8 0 007 18.5c7.7 0 12-6.4 12-11.9 0-.18 0-.36-.01-.54A8.5 8.5 0 0023 3z"
                    ></path>
                  </svg>
                </a>
              </li>
              <li class="mb-2">
                <a
                  href="https://www.instagram.com/tonybnya"
                  target="_blank"
                  class="text-white hover:text-[#602f32]"
                >
                  <Instagram />
                </a>
              </li>
              <li class="mb-2">
                <a
                  href="https://web.facebook.com/tonybnya"
                  target="_blank"
                  class="text-white hover:text-[#602f32]"
                >
                  <Facebook />
                </a>
              </li>
            </ul>
            <div class="flex gap-2">
              <Mail /><span class="tracking-wide">tonybnya@gmail.com</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
