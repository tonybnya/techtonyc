---
import { Image } from "astro:assets";

import { Button } from "@/components/ui/button";
import logo from "../images/tech.png";
// import logo from "../images/techtonyc.png";
---

<nav class="bg-black text-white">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 md:px-14"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image src={logo} class="h-14 w-14" alt="TechTonyc Logo" />
      <Button
        data-collapse-toggle="navbar-default"
        type="button"
        className="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white bg-transparent rounded-lg md:hidden hover:text-[#602f32]"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </Button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 border-gray-700"
        >
          <li>
            <a
              href="/"
              class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32] hover:underline hover:underline-offset-4 hover:decoration-white hover:decoration-2"
              aria-current="page">Home</a
            >
          </li>
          <li>
            <a
              href="/articles"
              class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32] hover:underline hover:underline-offset-4 hover:decoration-white hover:decoration-2"
              >All Articles</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="block py-2 px-3 text-white rounded md:p-0 hover:text-[#602f32] hover:underline hover:underline-offset-4 hover:decoration-white hover:decoration-2"
              >About</a
            >
          </li>
        </ul>
      </div>
    </a>
  </div>
</nav>
